@page
@model ETMP.Pages.AddTrainingModel
@{
    ViewData["Title"] = "AddTraining";
}

<style>
    body {
        background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.8)), url(https://theengineeringmindset.com/wp-content/uploads/2019/05/Blueprint-background.png);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .leftMargin {
        margin-left: 50px;
    }

    /*#add-training{
            display: none;
        }*/
</style>

<div class="leftMargin">
    <p>Training Name: @Model.TrainingName</p>
    <p>Training Price: @Model.TrainingPrice</p>
    <p>Training Category: @Model.TrainingCategory</p>
    <p>Training Venue: @Model.TrainingVenue</p>
    <p>Training Itinerary: @Model.TrainingItinerary</p>
    <p>Training Description: @Model.TrainingDescription</p>
    <p>Training Availability: @Model.IsAvailable</p>
    <button onclick="window.location.href = '/Index'">
        Go Back
    </button>
</div>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>


<p>Training Name: @Model.TrainingName</p>



<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>