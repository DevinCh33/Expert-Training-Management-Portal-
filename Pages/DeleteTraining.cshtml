@page
@model ETMP.Pages.DeleteTrainingModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.8)), url(https://theengineeringmindset.com/wp-content/uploads/2019/05/Blueprint-background.png);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TrainingModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.TrainingName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingModel.TrainingName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.TrainingPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingModel.TrainingPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.TrainingItinerary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingModel.TrainingItinerary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.TrainingVenue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingModel.TrainingVenue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.TrainingCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingModel.TrainingCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.TrainingStartDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingModel.TrainingStartDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.TrainingEndDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingModel.TrainingEndDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.Availability)
        </dt>
        @if (Model.isAvailable == true)
        {
            <dd class="col-sm-10">
                Unavailable
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Available
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingModel.TrainingDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingModel.TrainingDescription)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TrainingModel.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <input type="hidden" asp-for="TrainingModel.Id" />
        <input type="submit" value="Cancel" class="btn btn-primary" asp-page="./Index" />
    </form>
</div>
