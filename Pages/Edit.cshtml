@page
@model ETMP.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TrainingModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrainingModel.Id" />
            <div class="form-group">
                <label asp-for="TrainingModel.TrainingName" class="control-label"></label>
                <input asp-for="TrainingModel.TrainingName" class="form-control" />
                <span asp-validation-for="TrainingModel.TrainingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingModel.TrainingPrice" class="control-label"></label>
                <input asp-for="TrainingModel.TrainingPrice" class="form-control" />
                <span asp-validation-for="TrainingModel.TrainingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingModel.TrainingItinerary" class="control-label"></label>
                <input asp-for="TrainingModel.TrainingItinerary" class="form-control" />
                <span asp-validation-for="TrainingModel.TrainingItinerary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingModel.TrainingVenue" class="control-label"></label>
                <input asp-for="TrainingModel.TrainingVenue" class="form-control" />
                <span asp-validation-for="TrainingModel.TrainingVenue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingModel.TrainingCategory" class="control-label"></label>
                <input asp-for="TrainingModel.TrainingCategory" class="form-control" />
                <span asp-validation-for="TrainingModel.TrainingCategory" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TrainingModel.Availability" /> @Html.DisplayNameFor(model => model.TrainingModel.Availability)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TrainingModel.TrainingDescription" class="control-label"></label>
                <input asp-for="TrainingModel.TrainingDescription" class="form-control" />
                <span asp-validation-for="TrainingModel.TrainingDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
