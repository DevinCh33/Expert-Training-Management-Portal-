@page
@model ETMP.Pages.BrowseTrainingModel
@{
    ViewData["Title"] = "Browse for Trainings";
}
<script src="/js/site.js"></script>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f2f2f2;
    }

    .container {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        box-sizing: border-box;
    }

    #filter-btn,
    #sort-btn,
    #submit-btn {
        flex: 1;
        margin: 0 20px;
        padding: 10px;
        border-radius: 30px;
        background-color: white;
        color: black;
        font-size: 29px;
        cursor: pointer;
        white-space: nowrap;
    }

    #sort-btn {
        border-radius: 0px;   
    }

    #search-bar {
        flex: 2;
        padding: 10px;
        padding-right: 400px;
        border: 1px solid #ccc;
        border-radius: 30px;
        font-size: 29px;
        outline: none;
        white-space: nowrap;
    }

    #filter-btn:hover,
    #sort-btn:hover,
    #submit-btn:hover {
        background-color: grey;
    }

    .hidden, .filterOptionsContainer {
        display: none;
    }

    /*drop down*/
    		.dropContainer {
			max-width: 800px;
			margin: 0 auto;
			padding: 20px;
		}

		.dropdown {
			position: relative;
			display: inline-block;
		}

		.dropdown-content {
			display: none;
			position: absolute;
			z-index: 1;
			top: 60px;
			background-color: white;
			border-radius: 30px;
			padding: 10px;
			box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
			left: 0px; /* Adjusted to move the dropdown content to the left */
		}

		.dropdown:hover .dropdown-content,
		.dropdown:focus-within .dropdown-content {
			display: block;
		}

		.dropdown-content a {
			display: block;
			padding: 10px 15px;
			text-decoration: none;
			color: black;
			font-size: 24px;
			cursor: pointer;
			white-space: nowrap;
		}

		.dropdown-content a:hover {
			background-color: #E5E5E5;
			color: black;
			border-radius:30px;
		}

		#sort-btn {
			flex: 1;
			margin: 0 20px;
			padding: 10px 20px;
			border-radius: 30px;
			background-color: #3498DB;
			color: white;
			font-size: 28px;
			cursor: pointer;
			white-space: nowrap;
			border: none;
		}

		#sort-btn:hover,
		#sort-btn:focus {
			background-color: #2980B9;
		}

		.icon {
			display: inline-block;
			height: 28px;
			width: 28px;
			margin-right: 10px;
			vertical-align: middle;
		}

		.icon-duration {
			background-image: url('https://img.icons8.com/material-rounded/24/000000/clock--v1.png');
			background-repeat: no-repeat;
			background-position: center;
			background-size: 20px 20px;
		}

		.icon-date {
			background-image: url('https://img.icons8.com/material-rounded/24/000000/calendar--v1.png');
			background-repeat: no-repeat;
			background-position: center;
			background-size: 20px 20px;
		}

		.icon-price {
			background-image: url('https://img.icons8.com/material-rounded/24/000000/money--v1.png');
			background-repeat: no-repeat;
			background-position: center;
			background-size: 20px 20px;
		}

		.icon-name {
			background-image: url('https://img.icons8.com/material-rounded/24/000000/user--v1.png');
			background-repeat: no-repeat;
			background-position: center;
			background-size: 20px 20px;
		}
</style>

<div class="container">
    <form>
        <button id="filter-btn">Filter</button>
        <input type="text" id="search-bar" placeholder="Search for Training">
        <button type="submit" id="submit-btn">Submit</button>
        <div class="dropContainer">
            <div class="dropdown">
                <button id="sort-btn">Sort By</button>
                <div class="dropdown-content">
                    <a href="#" class="sort-option" data-sort="duration">
                        <span class="icon icon-duration"></span>
                        Duration
                    </a>
                    <a href="#" class="sort-option" data-sort="date">
                        <span class="icon icon-date"></span>
                        Date
                    </a>
                    <a href="#" class="sort-option" data-sort="price">
                        <span class="icon icon-price"></span>
                        Price
                    </a>
                    <a href="#" class="sort-option" data-sort="name">
                        <span class="icon icon-name"></span>
                        Name
                    </a>
                </div>
            </div>
    </form>
</div>




<div class="filterOptionsContainer">
    <form>
        <div>
            <label>Category:</label>
            <div>
                <label>
                    <input type="checkbox" name="category" value="Business">
                    Business
                </label>
                <label>
                    <input type="checkbox" name="category" value="IT">
                    IT
                </label>
                <label>
                    <input type="checkbox" name="category" value="Photography">
                    Photography
                </label>
                <label>
                    <input type="checkbox" name="category" value="Self-help">
                    Self-help
                </label>
            </div>
        </div>
        <div>
            <label for="price-range">Price Range:</label>
            <input type="range" id="price-range" name="price-range" min="500" max="10000" value="1"><br />
            <span id="price-display">RM500</span>
        </div>
        <div>
            <label>Discount</label>
            <span>
                <input type="checkbox" name="discount" value="yes">
            </span>
        </div>
        <div>
            <label>Date Range:</label>
            <div>
                <label>From:</label>
                <input type="date" name="start_date"></br>
                <label>To:</label>
                <input type="date" name="end_date">
            </div>
        </div>
        <div>
            <button type="submit">Apply Filters</button>
        </div>
    </form>
</div>





